@model LoginVM

<div class="card mt-4">
    <div class="card-header bg-white">

    </div>
    <div class="card-body">
        <form asp-controller="Account" asp-action="Login" method="post" role="form">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="UserName" placeholder="User Name" class="form-control" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Password" placeholder="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-success form-control btn-block">Log in</button>
            </div>
        </form>
    </div>
    <div class="card-footer bg-white">
        <div class="card-footer-item">
            <a asp-action="ForgotPassword">Forgot Password</a>
        </div>
    </div>

</div>

